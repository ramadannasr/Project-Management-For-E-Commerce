@model IEnumerable<eCommerce.Models.Employee>

@if(Model != null) { 
<table class="table">
    <tr class="mytr">
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
          MT Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Experience)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.Photo != null)
            {
                var base64 = Convert.ToBase64String(item.Photo);
                var imgsrc = String.Format("data:image/gif;base64,{0}", base64);

                <img src='@imgsrc' style="max-width:80px;max-height:100px" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Experience)
        </td>
        <td>
            @using (Html.BeginForm("Send_EMP_MD_Request", "Marketing_Director", new { id = item.ID }, FormMethod.Post, new { onsubmit = "return confirm('Send Request To That Trainee?' );" }))
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Send-Request" class="btn btn-default" />
            }
           
        </td>
    </tr>
}

</table>
}else
{
@Html.Action("emptyMessage","home")
}
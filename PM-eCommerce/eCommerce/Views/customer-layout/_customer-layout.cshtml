<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/images/home icon.png" rel="icon" />


    <link href="~/Content/customerlayout.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/charts.js"></script>
</head>
<body>

    <!--start header-->

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("eCommerce", "Index", "Home", new { area = "" }, new { @class = "navbar-brand",title="Go To Home" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("LogOut", "LogOut", "home")
                    </li>

                    <li>

                        @{String x = ""; }
                        @if (Session["Username"] != null)
                        {
                            x = Session["Username"].ToString();
                        }


                        <a title="" style="color:#fff;" ;>
                            <i class="glyphicon glyphicon-user"></i>
                            Welcome @x
                        </a>

                    </li>

                </ul>
            </div>
        </div>
    </div>
    <!--end header-->

    <!--start scroll up -->

    <div id="scroll-up">

        <img src="~/Content/images/up4.png" title="up">
    </div>
    <!--end scroll up -->

    <!--start navbar-->
    <div class="custom-margin">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                @if (Session["userType"] != null && Session["userType"].Equals("5"))// customer type
                {
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "home")</li>
                            <li class="active">@Html.ActionLink("My Profile", "Index", "Customer")</li>
                            <li><a href="#current" class="smoth_down">Assigned Projects</a></li>
                            <li><a href="#delivered" class="smoth_down">Delivered Projects</a></li>
                            <li>@Html.ActionLink("Add New Project", "addProject", "Customer")</li>
                            <li><a href="#not_assigned" class="smoth_down">Not Assigned Projects</a></li>
                            <li><a href="#md_request" class="smoth_down">MD Requests</a></li>
                        </ul>

                    </div><!-- /.navbar-collapse -->
                }
                else if (Session["userType"] != null && Session["userType"].Equals("3"))// trainee type
                {
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "home")</li>
                            <li  class="active">@Html.ActionLink("My Profile", "Index", "Marketing_Trainee")</li>
                            <li><a href="#current" class="smoth_down">Requests</a></li>
                            <li><a href="#md_request" class="smoth_down"> Current Projects</a></li>
                            <li><a href="#delivered" class="smoth_down">Previous  Delivered Projects</a></li>
                        </ul>

                    </div><!-- /.navbar-collapse -->

                }
            </div><!-- /.container-fluid -->
        </nav>
    </div>

    <!--end navbar-->
    <!--start personal info-->
    <div class="col-md-4">
        <div>
            @RenderBody()
            @if (Session["userType"].Equals("5"))// customer type
            {
                @RenderSection("customer_personal_info", false)

            }
            else if (Session["userType"].Equals("3"))// trainee type
            {
                @RenderSection("trainee_personal_info", false)

            }

        </div>

    </div>

    <!--end personal info-->


    <!--start body-->
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                @if (Session["userType"].Equals("5"))// customer type
            {
                    @RenderSection("customer_projects", false)

                }
                else if (Session["userType"].Equals("3"))// trainee type
                {
                    @RenderSection("trainee_projects", false)

                }

            </div>
        </div>
    </div>
    <!--end body-->

    <!-- start  footer-->
    <br /><br /><br /><br />
    <div class="footer navbar-fixed-bottom">
        <div class="container">
            <span><p>&copy; @DateTime.Now.Year - fcih.Team</p></span>
            <ul>
                <li> <a href="https://www.facebook.com/" target="_blank" title="facebook" class="face"><i class="fa fa-facebook-square"></i> </a> </li>
                <li> <a href="https://www.google.com.eg/" target="_blank" title="google" class="goo"><i class="fa fa-google-plus-square"></i> </a> </li>
                <li> <a href="https://www.youtube.com/" target="_blank" title="youtube" class="you"><i class="fa fa-youtube-square"></i> </a> </li>
                <li> <a href="http://twitter.com/" target="_blank" title="twitter" class="twi"><i class="fa fa-twitter-square"></i> </a> </li>
            </ul>
        </div>
    </div>
    <!-- end footer-->

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/myscripts.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

</body>
</html>
